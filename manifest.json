{
  "manifest_version": 2,
  "name"            : "kaeru",
  "description"     : "kaeru",
  "short_name"      : "kaeru",
  "version"         : "0.1",
  "browser_action": {
    "default_popup": "index.html"
  },
  "permissions": [
    "debugger",
    "storage",
    "tabs",
    "storage"
  ],
  "icons": {
    "16": "assets/icon16.png",
    "48": "assets/icon48.png",
    "128": "assets/icon128.png"
  },
  "background": {
    "scripts": ["dist/background.js"]
  },
  "content_scripts": [
    {
      "matches": ["http://jisho.org/*"],
      "js": ["dist/injector.js"]
    }
  ]
}
